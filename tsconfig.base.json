{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "strict": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "@robo/shared": [
                "packages/shared/src/main.ts"
            ],
            "@robo/shared/*": [
                "packages/shared/src/*"
            ],
            "@robo/config/*": [
                "packages/config/src/*"
            ],
            "@robo/db": [
                "packages/database/src/db.ts"
            ],
            "@robo/db/*": [
                "packages/database/src/*"
            ],
            "@robo/logger": [
                "packages/logger/src/index.ts"
            ],
            "@robo/logger/*": [
                "packages/logger/src/*"
            ]
        }
    }
}