{
  "extends": "../../tsconfig.build.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": ".",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "types/*": [
        "types/*"
      ],
      "utiles/*": [
        "utiles/*"
      ],
      "lib/*": [
        "src/lib/*"
      ]
    }
  },
  "include": [
    "src", "utils"
  ],
  "references": [
    {
      "path": "../../packages/shared"
    },
    {
      "path": "../../packages/config"
    }
  ]
}